            app:layout_scrollFlags="scroll|enterAlways"
            app:tabMode="scrollable"
            >

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"

                />

            <com.google.android.material.tabs.TabItem
