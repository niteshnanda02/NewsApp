<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context=".sign.signupActivity">

    <ImageView
        android:layout_weight="2.25"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleX=".75"
        android:scaleY=".65"
        android:src="@drawable/citispotterlogo"></ImageView>


    <EditText
        android:layout_weight="1"
        android:id="@+id/signup_firstname"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Enter your first name"
        ></EditText>

    <EditText
        android:layout_weight="1"
        android:id="@+id/signup_lastname"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Enter your last name"
        ></EditText>

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Enter your email"
        android:layout_weight="1"
        ></EditText>

    <EditText
        android:id="@+id/signup_pass"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Enter your password"
        android:layout_weight="1"
        ></EditText>

    <EditText
        android:layout_weight="1"
        android:id="@+id/signup_mobile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Mobile Number(Optional)"
        ></EditText>

    <Button
        android:layout_weight=".75"
        android:id="@+id/sign_up"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:onClick="signUp"
        android:text="sign up"
        android:textStyle="bold"></Button>


</LinearLayout>